# =============================================================================
# INVOICE AGENT BOT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Telegram Bot Configuration (Required)
# -----------------------------------------------------------------------------
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Comma-separated list of admin user IDs (for admin commands)
ADMIN_USER_IDS=123456789,987654321

# -----------------------------------------------------------------------------
# AI Provider Configuration (At least one required)
# -----------------------------------------------------------------------------
# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.3

# Google Gemini Configuration (Fallback)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MAX_TOKENS=2000
GEMINI_TEMPERATURE=0.3

# AI Provider Priority (comma-separated: openai,gemini)
AI_PROVIDER_PRIORITY=openai,gemini

# -----------------------------------------------------------------------------
# Document Processing Configuration
# -----------------------------------------------------------------------------
# Maximum file size for uploads (in MB)
MAX_FILE_SIZE_MB=20

# Supported file formats (comma-separated)
SUPPORTED_FORMATS=pdf,jpg,jpeg,png,docx

# OCR Language (for image processing)
OCR_LANGUAGE=eng

# -----------------------------------------------------------------------------
# Invoice Generation Configuration
# -----------------------------------------------------------------------------
# Default currency
DEFAULT_CURRENCY=USD

# Company Information (for invoice header)
COMPANY_NAME=Your Company Name
COMPANY_ADDRESS=123 Business Street, City, Country
COMPANY_EMAIL=billing@yourcompany.com
COMPANY_PHONE=+1-555-123-4567
COMPANY_TAX_ID=XX-XXXXXXX

# Invoice numbering
INVOICE_PREFIX=INV
INVOICE_START_NUMBER=1000

# -----------------------------------------------------------------------------
# Storage Configuration
# -----------------------------------------------------------------------------
# Base directory for data storage
DATA_DIR=./data

# SQLite database path
DATABASE_PATH=./data/invoice_bot.db

# Invoice output directory
INVOICE_OUTPUT_DIR=./data/invoices

# Upload temporary directory
UPLOAD_DIR=./data/uploads

# Log directory
LOG_DIR=./data/logs

# -----------------------------------------------------------------------------
# Bot Behavior Configuration
# -----------------------------------------------------------------------------
# Conversation timeout (in minutes)
CONVERSATION_TIMEOUT_MINUTES=30

# Maximum retry attempts for failed operations
MAX_RETRY_ATTEMPTS=3

# Retry delay base (in seconds, uses exponential backoff)
RETRY_DELAY_BASE=2

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable file logging
ENABLE_FILE_LOGGING=true

# Enable console logging
ENABLE_CONSOLE_LOGGING=true

# -----------------------------------------------------------------------------
# Development/Testing Configuration
# -----------------------------------------------------------------------------
# Enable debug mode (shows detailed error messages)
DEBUG_MODE=false

# Test mode (uses mock AI responses)
TEST_MODE=false
