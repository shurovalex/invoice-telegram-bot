# =============================================================================
# INVOICE COLLECTION BOT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# =============================================================================
# REQUIRED VARIABLES
# =============================================================================

# Telegram Bot Token (get from @BotFather)
# Format: 123456789:ABCdefGHIjklMNOpqrSTUvwxyz
BOT_TOKEN=your_bot_token_here

# Webhook URL (your deployed app URL)
# Railway: https://your-project.up.railway.app
# Render: https://your-service.onrender.com
# Fly.io: https://your-app.fly.dev
WEBHOOK_URL=https://your-app-url.com

# Webhook path (default: /webhook)
WEBHOOK_PATH=/webhook

# =============================================================================
# OPTIONAL VARIABLES
# =============================================================================

# Server port (auto-set by most platforms, default: 8443)
# WEBHOOK_PORT=8443

# Logging level (DEBUG, INFO, WARNING, ERROR)
# Default: INFO
LOG_LEVEL=INFO

# Temporary directory for file processing
# Default: /tmp/invoice_bot
TEMP_DIR=/tmp/invoice_bot

# Maximum file upload size in MB
# Default: 20
MAX_FILE_SIZE_MB=20

# OCR Language for Tesseract
# Default: eng (English)
# Available: eng, fra, deu, spa, etc.
OCR_LANGUAGE=eng

# Invoice template path
# Default: templates/invoice_template.html
INVOICE_TEMPLATE_PATH=templates/invoice_template.html

# Company logo path (optional)
# COMPANY_LOGO_PATH=assets/logo.png

# Admin chat ID for error notifications (optional)
# Get your chat ID by messaging @userinfobot
# ADMIN_CHAT_ID=123456789

# =============================================================================
# DATABASE (Optional - for persistent storage)
# =============================================================================

# PostgreSQL connection string
# Railway and Render provide this automatically when you add a database
# Format: postgresql://user:password@host:port/database
# DATABASE_URL=postgresql://user:pass@localhost:5432/invoice_bot

# =============================================================================
# AI API KEYS (Optional - if using AI features)
# =============================================================================

# OpenAI API Key (for GPT features)
# OPENAI_API_KEY=sk-...

# Google Gemini API Key
# GEMINI_API_KEY=...

# =============================================================================
# PLATFORM-SPECIFIC VARIABLES
# =============================================================================

# Railway automatically sets these:
# RAILWAY_ENVIRONMENT=production
# RAILWAY_SERVICE_NAME=your-service
# RAILWAY_PROJECT_NAME=your-project

# Render automatically sets these:
# RENDER=true
# RENDER_SERVICE_NAME=your-service

# Fly.io automatically sets these:
# FLY_APP_NAME=your-app
# FLY_REGION=lhr

# =============================================================================
# DEVELOPMENT VARIABLES (do not use in production)
# =============================================================================

# Set to 'true' to use polling instead of webhook (for local development)
# USE_POLLING=false

# Debug mode (never enable in production)
# DEBUG=false
